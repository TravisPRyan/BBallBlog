<% include partials/header.ejs %>

<div class="ui main text container segment">
	<div class="ui huge header"><%=blog.title %></div>
	<div class="ui top attatched segment">
		<div class="item">
			<img class="ui centered circular image" src="<%= blog.image %>">
			<div class="content">
				<span><%= blog.created.toDateString() %></span>
			</div>
			<div class="description">
				<p><%- blog.body %></p>
			</div>
			<a class ="ui inverted orange button" href="/blogs/<%= blog._id %>">EDIT</a>
		 		<form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
					<button class="ui inverted blue button" type="submit">Delete</button>	
				</form>
			
		</div>
	</div>
	
	
</div>

